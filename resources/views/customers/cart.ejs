<section class="cart py-12">
 
    <% if(session.cart) { %>
<div class="order container mx-auto w-1/3" style="
padding: 0px 254px 0px 237px;
">
    <div class="flex items-center border-b border-gray-300 pb-3">
        <img src="/img/cart-black.png" alt="">
        <h1 class="font-bold ml-4 text-2xl">Order summary</h1>
    </div>
    <div class="pizza-list">
        <% for(let pizza of Object.values(session.cart.items)) { %>
        <div class="flex items-center my-8"> 
            <img class="w-24" src="/img/<%= pizza.item.image %>" alt="">
            <div class="flex-1 ml-4">
                <h1><%= pizza.item.name %></h1>
                <span><%= pizza.item.size %></span>
            </div>
            <span class="flex-1"><%= pizza.qty %> Pcs</span>
            <span class="font-bold text-lg">â‚¹<%= pizza.item.price * pizza.qty %></span>
        </div>

        <% } %>
       
    <hr>

    <div class="text-right py-2">
        <div>
            <span class="text-lg font-bold ">Total Amount:</span>
            <span class="amount text-2xl font-bold ml-2">â‚¹<%= session.cart.totalPrice %></span>

        </div>

        <form action="" class="mt-10">
            <input class="border border-gray-400 p-2 w-1/2 mb-4" type="number" placeholder="Phone Number">
            <input class="border border-gray-400 p-2 w-1/2 mb-4" type="text" placeholder="Address">

            <div>
                <!-- <button class="btn-pri px-6 py-2 rounded-full text-white font-bold mt-1" type="submit">Order Now</button> -->
    <a href="" class="inline-block cursor-pointer btn-pri px-6 py-2 rounded-full text-white font-bold mt-4">Login to continue</a>

            </div>
        </form>

    </div>

   </div>
 </div>

 <% } else { %>

    <div class="empty-cart py-8">
        <div class="container max-auto text-center">
            <h1 class="text-3xl font-bold mb-2">Cart EmptyðŸ˜Š</h1>.
            <p class="text-gray-500 text-lg mb-12">You probably haven't ordered a pizza yet. <br>
            to order a pizza, go to the main page.</p>
            <img class="w-1/5 mx-auto" src="/img/empty-cart.png" alt="empty-cart">
            <a href="/" class="inline-block px-6 py-2 rounded-full btn-pri text-white font-bold mt-12">Go back</a>
        </div>
    
    </div>
 <% } %>
</section>